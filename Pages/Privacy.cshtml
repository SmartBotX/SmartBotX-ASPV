@page
@model PrivacyModel
@{
    ViewData["Title"] = "Privacy Policy";
}
<section class="bg-dark text-light p-5 p-lg-0 pt-lg-5 text-center text-sm-start" data-aos="fade">
    <div class="container">
        <div class="d-sm-flex align-items-center justify-content-between">
            <div>
                <h1>
                    Concerned about your <span class="text-danger">Privacy</span> ?
                </h1>
                <p class="lead">
                    We take your privacy very seriously. We only collect the information we need to provide you with the best possible service, and we will never sell or share your information with third parties.
                </p>
                <br />
            </div>
            <img class="d-none d-md-block img-fluid"
                 src="/images/privacy.png"
                 alt="Robot"
                 width="400"
                 height="400" />
        </div>
    </div>
</section>

<section class="bg-warning text-light p-5 text-center text-sm-start" data-aos="slide-up">
    <div class="container">
        <div class="d-sm-flex align-items-center">
            <img class="d-none d-md-block img-fluid"
                 src="/images/who.png"
                 alt="Robot"
                 width="250"
                 height="250" />
            <div>
                <h1 class="text-center text-md-end text-dark justify-content-between">What do we collect?</h1>
                <p class="lead text-center text-md-end text-dark">
                    We collect personal information and financial information for billing purposes only.
                    We will never sell or share your information with third parties. We use industry-leading
                    security measures to protect your data. You can opt out of sharing your personal information
                    at any time.
                </p>
            </div>
        </div>
    </div>
</section>

<section class="bg-danger text-light p-5 text-center text-sm-start" data-aos="slide-up">
    <div class="container">
        <div class="d-sm-flex align-items-center justify-content-between">
            <div>
                <h1>What we do with it</h1>
                <p class="lead">
                    We use the data we collect to provide you with the best possible service, including sending
                    billing statements, promoting new features, and raising security concerns. We delete your data
                    from our servers after billing is complete, except for your email and name, which we use to keep
                    you updated on our latest news and offers. You can opt out of data collection at any time,
                    and we will delete your data completely.
                </p>
            </div>
            <img class="d-none d-md-block img-fluid"
                 src="/images/data.png"
                 alt="Mission&Vision"
                 width="350" />
        </div>
    </div>
</section>

<section class="text-light p-5 text-center text-sm-start bg-white" data-aos="slide-up">
    <div class="container">
        <h1 class="text-dark text-center">Get in touch</h1>
        <div class="d-sm-flex align-items-center justify-content-between">
            <div>
                <hr class="text-dark">
                <p class="text-dark lead">Email: <span class="text-dark">smartbotx@webname.com</span></p>
                <hr class="text-dark">
                <p class="text-dark lead">Contact: <span class="text-dark">+639-143-234-675</span></p>
                <hr class="text-dark">
                <p class="text-dark">-OR-</p>
                <a href="https://facebook.com/smartbotx" class="link-underline link-underline-opacity-0">
                    <i class="bi bi-facebook text-primary mx-3 ms-lg-0 px-auto fs-1"></i>
                </a>
                <a href="https://twitter.com/smartbotx" class="link-underline link-underline-opacity-0">
                    <i class="bi bi-twitter text-primary mx-3 px-auto fs-1"></i>
                </a>
                <a href="https://discord.gg/mfm4N3NzU6" class="link-underline link-underline-opacity-0">
                    <i class="bi bi-discord text-primary mx-3 px-auto fs-1"></i>
